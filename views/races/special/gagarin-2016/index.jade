extends ../../../template/index

append params
	- var title = race.title;

append styles
	link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
	link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css")
	link(rel="stylesheet", href="/bower_components/fullpage.js/dist/jquery.fullpage.css")
	link(rel="stylesheet", href="/stylesheets/views/races/special/gagarin-2016.css")

append scripts
	mixin requirejs('views/races/special/gagarin-2016')

block body
	#fullpage
		.section.active
			.container
				.well
					div #{moment(race.date).format('D MMMM HH:mm')}
					h1.h2 #{race.title}
					div #{race.address}

				.text-center
					a#letsgo-button.btn.btn-lg.btn-warning Поехали!

		.section
			.container
				.panel.panel-default
					.panel-heading
						h2.panel-title Регистрация

					.panel-body
						form#registration-form(data-race-id="#{race._id}")
							.form-group
								input.form-control.input-lg(name="name", type="text", placeholder="Имя", required="")
							.form-group
								input.form-control.input-lg(name="email", type="email", placeholder="E-mail", required="")
							.text-center
								button.btn.btn-success.btn-lg(type="submit") Я бегу